# Generar con: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=cambiar-esto-obligatorio

# PostgreSQL (Docker Compose ya lo configura, solo necesitas esto para desarrollo local sin Docker)
DATABASE_URL=postgresql://casaleones:casaleones_secret@localhost:5432/casaleones

# Facturación CFDI (Fase 3) — Obtener en https://facturapi.io
# Sin esta key, las facturas se registran como "pendiente" sin timbrar
FACTURAPI_KEY=
FACTURAPI_URL=https://www.facturapi.io/v2

# Delivery (Fase 4) — Configurar con las credenciales de cada plataforma
UBER_EATS_WEBHOOK_SECRET=
RAPPI_API_KEY=
DIDI_FOOD_API_KEY=

# Sentry (Fase 4) — Monitoreo de errores
# Obtener DSN en https://sentry.io
SENTRY_DSN=
SENTRY_TRACES_RATE=0.1
